{
  "manifest_version": 2,
  
  "name": "NoFap Panic Button",
  "description": "This extension provides an in browser version of the NoFap Emergency Relapse Prevention Tool.",
  "version": "1.3.0",
  "applications": {
    "gecko": {
      "id": "@panicbutton"
    }
  },
  
  "icons":{
    "16":               "data/icon16.png",
    "19":               "data/icon19.png",
    "32":               "data/icon32.png",
    "48":               "data/icon48.png",
    "64":               "data/icon64.png",
    "128":              "data/icon128.png"
  },

  "browser_action": {
    "default_popup": "data/popup.html",
    "default_icon": {
      "16":               "data/icon16.png",
      "19":               "data/icon19.png",
      "32":               "data/icon32.png",
      "48":               "data/icon48.png",
      "64":               "data/icon64.png",
      "128":              "data/icon128.png"
    }
  },

  "options_ui": {
    "page": "data/options.html",
    "browser_style": false
  },

  "incognito": "spanning",

  "background": {
    "scripts": ["data/nsfwguard_webrequestlistener.js", "data/subredditDBLoad.js"]
  },

  "web_accessible_resources": [
    "data/popupbox.css",
    "data/popupbox.html"
  ],

  "permissions": [
    "webRequest", "webRequestBlocking",
    "storage",
    "*://*.reddit.com/r/*",
    "*://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["data/popupbox.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.reddit.com/r/*"],
      "js": ["data/nsfwguard_contentscript.js"],
      "run_at": "document_start"
    }
  ],

  "content_security_policy":  "script-src 'self'; object-src 'self';"
}
